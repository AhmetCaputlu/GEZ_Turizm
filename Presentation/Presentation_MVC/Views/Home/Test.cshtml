@model BusinessLogic.DTOs.Companies.PartnerCompanies.TransactionRequestDTO


<h2>Yeni İşlem Oluştur</h2>

<form asp-action="Test" method="post">
	<div class="row">

		<div class="col-md-6 mb-3">
			<label asp-for="Type" class="form-label"></label>
			<select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<TransactionType>()">
				<option value="">Seçiniz</option>
			</select>
			<span asp-validation-for="Type" class="text-danger"></span>
		</div>

		<div class="col-md-6 mb-3">
			<label asp-for="TotalCost" class="form-label"></label>
			<input asp-for="TotalCost" class="form-control" type="number" step="0.01" />
			<span asp-validation-for="TotalCost" class="text-danger"></span>
		</div>

		<div class="col-md-6 mb-3">
			<label asp-for="PartnerCompanyId" class="form-label"></label>
			<select asp-for="PartnerCompanyId" class="form-select" asp-items="ViewBag.PartnerCompanies">
				<option value="">Şirket Seçiniz</option>
			</select>
			<span asp-validation-for="PartnerCompanyId" class="text-danger"></span>
		</div>

	</div>

	<button type="submit" class="btn btn-primary">Kaydet</button>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}